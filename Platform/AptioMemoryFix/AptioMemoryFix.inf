  MemoryMap.c
  MemoryMap.h
  RtShims.c
  RtShims.h
  ServiceOverrides.c
  ServiceOverrides.h
  VMem.c
  VMem.h
  UmmMalloc/UmmMalloc.h
  UmmMalloc/UmmMalloc.c
  Utils.c
  Utils.h

[Sources.X64]
  X64/AsmFuncsX64.nasm
  X64/RtShims.nasm

